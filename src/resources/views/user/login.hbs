<div class="container" style="margin-top: 10%; margin-bottom: 10%;">
    <form method="POST" action="/login" style="width: 500px;">
        <div class="form-floating mb-3">
            <label for="username">Tên đăng nhập</label>
            <input type="text" class="form-control" id="username" name="username">
        </div>
        <div class="form-floating">
            <label for="password">Mật khẩu</label>
            <input type="password" class="form-control" id="password" name="password">
        </div>
        <button type="submit" class="btn btn-success mt-4">Đăng Nhập</button>
        <button type="reset" class="btn btn-primary mt-4">Hủy</button>
    </form>
    <a style="width:150px" class="btn btn-success mt-4" href="/register">Đăng kí</a>
</div>