<div class="container" style="margin-top:10%; margin-bottom: 10%;">
    <form method="POST" action="/register" style="width: 500px;">
        <h2>Đăng kí</h2>
        <div class="form-floating mb-3">
            <label for="username">Tên đăng nhập</label>
            <input type="text" class="form-control" id="username" name="username">
        </div>
        <div class="form-floating">
            <label for="password">Mật khẩu</label>
            <input type="password" class="form-control" id="password" name="password">
        </div>
        <button type="submit" class="btn btn-success mt-4">Đăng kí</button>
        <button type="submit" class="btn btn-dark mt-4">Hủy</button>
    </form>
    <a class="btn btn-success mt-4" href="/login">Đăng nhập</a>
</div>